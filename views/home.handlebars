<div class="row justify-content-md-center">
    <div class="col-sm-8">
        <div class="card mx-auto">
            <div class="card-header">
                <h3>To create a new blog post, please <span><a href="#">Log In</a></span> or <span><a href="#">Sign
                            Up</a></span>.</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-8">

        <div class="row justify-content-md-center">
            <div class="card mx-auto">
                <a href="/blog/{{id}}">
                    <div class="card-header">
                        {{{title}}} {{{date_created}}}
                    </div>
                    <div class="card-body">
                        <p>{{text}}</p>>
                    </div>
                </a>
            </div>
        </div>

        {{#each blogs as |blog|}}
        {{> blog-details}}
        {{/each}}

    </div>
</div>