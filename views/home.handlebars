<div class="row justify-content-md-center">
    <div class="col-sm-12 col-md-8">
        <div class="card text-center mx-auto">
            <div class="card-title">
                <h1>Blog This!</h1>
                <br />
                <h2>Share your thoughts with the world!</h2>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-8">
        <div class="card text-center mx-auto">
            <div class="card-title">
                <h3>Home - {{{blogs.length}}} currently available.</h3>
            </div>
        </div>
    </div>
    {{#each blogs as |blog| }}
    <div class="col-sm-12 col-md-8">
        <div class="row justify-content-md-center">
            <div class="card mx-auto" id="blogPreviewCards">
                <a href="/blog/{{id}}">
                    <div class="card-header">
                        <p><span>
                                <h3>{{{blog.title}}}</h3>
                            </span> by {{{blog.user.name}}} on {{format_date blog.date_created}}</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>