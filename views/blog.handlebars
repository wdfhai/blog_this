<div class="form-row justify-content-md-center">
    <div class="col-sm-12">
        <div class="card mx-auto" id="blogCard">
            <div class="card-header" id="blogCardHeader">
                <h2>{{{title}}}</h2>
                <br />
                <p>written by {{{user.name}}} on {{{format_date date_created}}}.</p>
            </div>
            <div class="card-body" id="blogCardBody">
                <p>{{{text}}}</p>
            </div>
            <div class="card-footer" id="blogCardFooter">
                {{#if logged_in}}
                <div class=" form-group col-sm-10">
                    <button type="click" class="btn btn-primary" data-toggle="modal" data-target="#commentModal"
                        id="commentBtn">COMMENT</button>
                </div>
                <div class="form-group col-sm-10">
                    <button type="click" class="btn btn-success" data-toggle="modal" data-target="#editModal"
                        id="editBtn">EDIT</button>
                </div>
                <div class="form-group col-sm-10">
                    <button type="click" class="btn btn-danger" id="deleteBtn">DELETE</button>
                </div>
                {{else}}
                <p>Please log in to comment, edit or delete.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{#if comments.length}}
<div class="form-row justify-content-md-center">
    <div class="col-sm-12">
        <div class="card mx-auto" id="blogCard">
            <div class="card-header" id="blogCardHeader">
                <h2>Comments</h2>
            </div>
            <div class="card-body" id="blogCardBody">
                {{#each comments as |comment|}}
                <p>
                    By {{{comments_author}}}
                </p>
                <p>
                    {{{comments_text}}}
                </p>
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="form-row justify-content-md-center">
    <div class="col-sm-12">
        <div class="card mx-auto" id="blogCard">
            <div class="card-body" id="blogCardHeader">
                <h3>No comments so far.</h3>
            </div>
        </div>
    </div>
</div>
{{/if}}


<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalTitle">Leaving comment as {{{name}}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea id="modalCommentText" style="width: 100%;" rows="6"
                    placeholder="Your comments here ..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                    id="cancelCommentBtn">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveCommentBtn" data-dismiss="modal">Save
                    changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalTitle">Leaving comment as {{{name}}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea id="editModalText" style="width: 100%;" rows="6">{{{text}}}</textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelEditBtn">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEditBtn" data-dismiss="modal">Save
                    changes</button>
            </div>
        </div>
    </div>
</div>

<script src="./js/blog.js"></script>